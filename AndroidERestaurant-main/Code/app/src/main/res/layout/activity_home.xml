<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/home_title"
        android:layout_width="263dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Blue Moon"
        android:textColor="#2196F3"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_home_entree"
        android:layout_width="0dp"
        android:layout_height="128px"
        android:layout_marginTop="24dp"
        android:background="#2196F3"
        android:gravity="center"
        android:shadowColor="#836868"
        android:text="EntrÃ©es"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cocktails" />

    <TextView
        android:id="@+id/activity_home_plats"
        android:layout_width="0dp"
        android:layout_height="128px"
        android:layout_marginTop="16dp"
        android:background="#2196F3"
        android:gravity="center"
        android:shadowColor="#836868"
        android:text="Plats"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_home_entree" />

    <TextView
        android:id="@+id/cocktails"
        android:layout_width="0dp"
        android:layout_height="256px"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="10dp"
        android:background="#2196F3"
        android:gravity="center"
        android:shadowColor="#836868"
        android:text='Cocktails "Maisons" '
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/guelles"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_title"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/guelles"
        android:layout_width="512px"
        android:layout_height="256px"
        android:background="#2196F3"
        android:gravity="center"
        android:shadowColor="#836868"
        android:text="Amuse-Geulles "
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/cocktails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cocktails"
        app:layout_constraintVertical_bias="1.0"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/activity_home_dessert"
        android:layout_width="0dp"
        android:layout_height="160px"
        android:layout_marginTop="16dp"
        android:background="#2196F3"
        android:gravity="center"
        android:text="Desserts \n(et pas que pour les gourmands)"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_home_plats" />

    <TextView
        android:id="@+id/text_explain"
        android:layout_width="209dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Restaurant et Bar "
        android:textColor="#2196F3"
        android:textColorHighlight="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_title" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="324dp"
        android:layout_height="204dp"
        android:contentDescription="restaurant_vue_mer"
        android:src="@drawable/vue_mer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_home_dessert" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="152dp"
        android:layout_height="116dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toStartOf="@+id/home_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>