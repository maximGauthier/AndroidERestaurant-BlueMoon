<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_browse_fragment"
    android:name="fr.isen.gauthier.androiderestaurant2.MainFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1C70"
    tools:context=".MainScreen"
    tools:deviceIds="tv"
    tools:ignore="MergeRootFrame">

    <EditText
        android:id="@+id/title_text"
        android:layout_width="263dp"
        android:layout_height="40dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Blue Moon"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_entrees"
        android:layout_width="0dp"
        android:layout_height="128px"
        android:layout_marginTop="32dp"
        android:background="#00BCD4"
        android:gravity="center"
        android:shadowColor="#836868"
        android:text="EntrÃ©es"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_cocktails" />

    <TextView
        android:id="@+id/text_plats"
        android:layout_width="0dp"
        android:layout_height="128px"
        android:layout_marginTop="32dp"
        android:background="#00BCD4"
        android:gravity="center"
        android:shadowColor="#836868"
        android:text="Plats"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_entrees" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:rotationY="-180"
        android:src="@drawable/ic_baseline_brightness_3_24"
        app:layout_constraintEnd_toStartOf="@+id/title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_cocktails"
        android:layout_width="0dp"
        android:layout_height="256px"
        android:layout_marginTop="68dp"
        android:background="#00BCD4"
        android:gravity="center"
        android:shadowColor="#836868"
        android:text='Cocktails "Maisons" '
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/text_guelles"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text" />

    <TextView
        android:id="@+id/text_guelles"
        android:layout_width="512px"
        android:layout_height="256px"
        android:background="#00BCD4"
        android:gravity="center"
        android:shadowColor="#836868"
        android:text="Amuse-Geulles "
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/text_cocktails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_cocktails"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/text_dessert"
        android:layout_width="0dp"
        android:layout_height="160px"
        android:layout_marginTop="32dp"
        android:background="#00BCD4"
        android:gravity="center"
        android:text="Desserts \n(et pas que pour les gourmands)"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_plats" />

</androidx.constraintlayout.widget.ConstraintLayout>